@model List<GameInfo.Models.ViewModels.AchievementsAllViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container-fluid" style="border: solid 1px white; border-radius: 10px; padding: 6px">
    @if (Model.Count == 0)
    {
        <h4 class="text-white text-center">No achievements have been added yet.</h4>
    }
    else
    {
        <div class="row" style="padding: 4px 12px 0px 12px">
            @foreach (var achievement in Model.OrderBy(x => x.Name))
            {
                <div class="col-lg-12 text-center">
                    <p class="text-white">
                        <a asp-controller="Achievements" asp-action="Details" asp-route-id="@achievement.Id" style="color:white; padding-right:4%">
                            <b>@achievement.Name</b>
                        </a>
                    </p>
                </div>
            }
        </div>
    }
    <hr style="background-color: white" />
    <div class="row">
        <div class="col-6">
            <form asp-controller="Achievements" asp-action="Add" method="get">
                <button type="submit" class="btn">Add an achievement</button>
            </form>
        </div>
        <div class="col-6 text-right">
            <form asp-controller="Home" asp-action="Index" method="get">
                <button type="submit" class="btn">Back to Index</button>
            </form>
        </div>
    </div>
</div>
<br />