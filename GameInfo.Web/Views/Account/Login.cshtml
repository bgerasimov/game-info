@model GameInfo.Models.InputModels.LoginInputModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-md-6 text-white" style="float:none; padding:12px;">
    <h2 style="padding-left: 1%;">Login</h2>
    <form method="post" asp-controller="Account" asp-action="Login">
        <div class="form-group col-md-4">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Username...">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password...">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 button-holder justify-content-center">
            <button type="submit" class="btn">Login</button>
        </div>
    </form>
</div>