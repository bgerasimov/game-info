@model GameInfo.Models.InputModels.AddAchievementInputModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row container-fluid text-white" style="padding: 6px 30px 6px 30px;">
    <h2>Adding achievement</h2>
</div>
<div class="row text-white">
    <div class="col-lg-12">
        <form method="post" asp-controller="Achievements" asp-action="Add">
            <div class="form-group col-md-4">
                <label asp-for="Name">Achievement Name: </label>
                <br />
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" placeholder="Name...">
            </div>
            <div class="form-group col-md-4">
                <label for="AcquisitionConditions">Way to acquire: </label>
                <br />
                <span asp-validation-for="AcquisitionConditions" class="text-danger"></span>
                <textarea rows="10" cols="10" for="AcquisitionConditions" class="form-control" id="AcquisitionConditions" name="AcquisitionConditions">
            </textarea>
            </div>
            <div class="form-group col-6 button-holder text-left">
                <button type="submit" class="btn">Add Achievement</button>
            </div>
        </form>
    </div>
    <div class="form-group col-6 text-left" style="padding-left: 30px">
        <form asp-controller="Achievements" asp-action="Index">
            <button type="submit" class="btn">Back to all</button>
        </form>
    </div>
</div>