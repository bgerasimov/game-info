@model GameInfo.Models.InputModels.AddDungeonInputModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row container-fluid text-white" style="padding: 6px 30px 6px 30px;">
    <h2>Add a dungeon</h2>
</div>
<div class="row text-white">
    <form class="col-md-12" method="post" asp-controller="Dungeons" asp-action="Add">
        <div class="form-group col-md-4">
            <label asp-for="Name">Dungeon Name: </label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" placeholder="Dungeon name...">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="AchievementReward">Achievement awarded:</label>
            <p>
                @{
                    var achievements = new List<string>() { "None" };
                    achievements.AddRange(Model.Achievements.Select(x => x.Name));
                }
                <select asp-for="AchievementReward" asp-items="@(new SelectList(achievements))"></select>
            </p>
        </div>
        <div class="form-group col-md-4 button-holder text-left">
            <button type="submit" class="btn">Add Dungeon</button>
        </div>
    </form>
    <div class="form-group col-md-12" style="padding-left: 30px">
        <form asp-controller="Dungeons" asp-action="Index">
            <button type="submit" class="btn">Back to all</button>
        </form>
    </div>
</div>